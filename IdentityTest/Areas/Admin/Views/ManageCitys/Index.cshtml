@model IEnumerable<DisplayCities>

<h2>Citys</h2>

<table class="table table-striped text-black-50">
    <thead>
        <tr>
            <th>City Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Name</td>
                <td>
                    <a class="btn btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@city.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-area="Admin" asp-action="Create">Add City</a>