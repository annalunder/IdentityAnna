@model IEnumerable<IdentityTest.Models.ApplicationUser>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Admin</h2>
<table class="table table-striped text-black-50">
    <thead>
        <tr><th>First Name</th><th>Last Name<th>City</th><th>Country</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.City.CityName</td>
            <td>@user.City.Country.CountryName</td>
            <td>
                <a class="btn btn-success" asp-area="Admin" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>