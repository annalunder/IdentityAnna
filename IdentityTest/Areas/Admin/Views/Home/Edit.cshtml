@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="admin" asp-action="Edit" method="post">
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.CityId)
            @Html.HiddenFor(Model => Model.City.CountryId)
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City.CityName"></label>
                <select asp-for="CityName" asp-items="ViewBag.Cities" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="CountryName"></label>
                <select asp-for="CountryName" asp-items="ViewBag.Countries" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-area="admin" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

